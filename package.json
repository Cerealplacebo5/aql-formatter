{
    "name": "aql-formatter",
    "displayName": "aql-formatter",
    "description": "Trying to create a custom AQL (ArangoDB's query language) formatter",
    "version": "0.0.0",
    "publisher": "CerealPlacebo5",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:aql-arangodb"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "aql-arangodb",
                "aliases": ["AQL"],
                "extensions": [".aql"]
            }
        ],
        "commands": [
            {
                "command": "extension.aql-formatter",
                "title": "(Bad) Format Foo Files"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install && tsc"
    },
    "devDependencies": {
        "@types/node": "*",
        "vscode": "1.1.37",
        "typescript": "5.7.2"
    }
}
